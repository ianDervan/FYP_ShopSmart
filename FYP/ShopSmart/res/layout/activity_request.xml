<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fyp.shopsmart.customer.Request" >

    <TextView
        android:id="@+id/requestitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Request Item"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/requestitem"
        android:layout_marginTop="5dp"
        android:background="#ED6F26" />

    <EditText
        android:id="@+id/itemname"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/customeditext"
        android:hint="Please Enter Item"
        android:inputType="text|textMultiLine"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_below="@+id/itemname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custombutton_lr"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />
    
    <TextView
        android:id="@+id/requestshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Request Shopping List"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/requestshop"
        android:layout_marginTop="5dp"
        android:background="#ED6F26" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight=".5"
            android:background="@drawable/customeditext"
            android:gravity="center_vertical"
            android:hint="Username.."
            android:paddingLeft="5dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_weight=".4"
            android:background="@drawable/customeditext"
            android:gravity="center_vertical"
            android:hint="Day.."
            android:paddingLeft="5dp"
            android:textSize="15sp" />
        
         <EditText
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_weight=".3"
            android:background="@drawable/customeditext"
            android:gravity="center_vertical"
            android:hint="Time.."
            android:paddingLeft="5dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/request"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="0.5"
            android:background="@drawable/custombutton_lr"
            android:text="Submit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/showlist"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.4"
            android:paddingLeft="5dp"
            android:background="@drawable/custombutton_lr"
            android:text="Show"
            android:textColor="#FFFFFF" />
        
         <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
             android:gravity="center_vertical"
            android:paddingLeft="5dp"
             android:background="@drawable/customeditext"
            android:hint="Status.."
            android:textSize="18dp" />


    </LinearLayout>
    
     <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:background="#ED6F26" />
    
    
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line2"
        android:orientation="vertical" >
         
  
        <ListView
            android:id="@+id/shoplistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#ED6F26"
            android:dividerHeight="0.1dp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>